<div class="container mt-5 babysitter-form-container">
  <div class="become-babysitter-form">
    <div>
      <h1>Become a babysitter</h1>
      <%= simple_form_for(@babysitter) do |f| %>
          <%= f.input :age %>
          <%= f.input :price_per_hour %>
          <%= f.input :description %>
          <%= f.button :submit, "Be a Babyistter", class: "btn btn-light" %>
      <% end %>
    </div>
  </div>
</div>
