<section class="search-sec">
    <div class="container">
        <form action="#" method="post" novalidate="novalidate">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                            <input type="text" class="form-control search-slt" placeholder="Enter Location....">
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                          <input type="number" class="form-control search-slt" placeholder="Price in Â¥" min="1" max="5000" value="<%= params[:price_per_hour] %>">

                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                          <input placeholder="Enter Date" class="textbox-n form-control search-slt" type="text" onfocus="(this.type='date')" id="date" min="<%= Date.today %>">
                        </div>
                        <div class="button-search">
                            <button type="button" class="btn btn-warning wrn-btn">
                              <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
